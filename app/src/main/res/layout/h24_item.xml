<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="hourly"
            type="com.example.sunnyweather.bean.hour24.HourlyBean" />
        <import type="com.example.sunnyweather.changePic"/>
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:text="@{hourly.fxTime}"
            android:id="@+id/time24" />
        <View
            android:layout_width="wrap_content"
            android:layout_height="5dp"/>

        <ImageView
            android:id="@+id/image24"
            android:layout_width="25dp"
            android:layout_gravity="center"
            android:layout_height="25dp"
            app:weatherImage="@{hourly.text}"/>
            <!--app:srcCompat="@{changePic.getchange(hourly.text)}" -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:text="@{hourly.text}"
            android:id="@+id/text24" />
        <View
            android:layout_width="wrap_content"
            android:layout_height="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:text="@{hourly.temp}"
            android:id="@+id/temp24" />

    </LinearLayout>
</layout>